{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET 8 Web Launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "run-all-watch",
      "program": "${workspaceFolder}/BadmintonApp.Web/bin/Debug/net8.0/BadmintonApp.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/BadmintonApp.Web",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/BadmintonApp.Web/Views"
      }
    }
  ]
}